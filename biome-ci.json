{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "extends": ["./biome.json"],
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "error",
        "noEmptyBlock": {
          "level": "error"
        },
        "noConsole": { "level": "error", "options": { "allow": ["log"] } }
      },
      "correctness": {
        "noUnusedFunctionParameters": {
          "level": "error"
        },
        "useExhaustiveDependencies": "error",
        "noUnusedVariables": {
          "level": "error"
        },
        "noUnusedImports": {
          "level": "error"
        }
      },
      "style": {
        "noImplicitBoolean": "error",
        "useTemplate": {
          "level": "error"
        }
      },
      "performance": {
        "noDelete": "error",
        "noReExportAll": "error",
        "noAccumulatingSpread": "error"
      },
      "complexity": {
        "noStaticOnlyClass": {
          "level": "error"
        },
        "noUselessFragments": {
          "level": "error"
        },
        "useOptionalChain": {
          "level": "error"
        }
      }
    }
  }
}
